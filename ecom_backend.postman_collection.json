{
  "info": {
    "_postman_id": "ecom-backend-collection",
    "name": "Ecom Backend",
    "description": "E-commerce backend API collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Authentication",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@techstore.com\",\n    \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/login",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "login"]
            },
            "description": "Login as admin user"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get Store Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/:shop_id/orders?page=1&limit=10&status=pending",
              "host": ["{{base_url}}"],
              "path": ["api", ":shop_id", "orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            },
            "description": "Get all orders for a store (admin only)"
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/cart/:shop_id/cart",
              "host": ["{{base_url}}"],
              "path": ["api", "cart", ":shop_id", "cart"]
            },
            "description": "Get cart details"
          }
        },
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"product_id\": \"product_id_here\",\n    \"quantity\": 1,\n    \"selected_variants\": [\n        {\n            \"name\": \"Storage\",\n            \"value\": \"256GB\"\n        },\n        {\n            \"name\": \"Color\",\n            \"value\": \"Graphite\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cart/:shop_id/cart",
              "host": ["{{base_url}}"],
              "path": ["api", "cart", ":shop_id", "cart"]
            },
            "description": "Add item to cart"
          }
        },
        {
          "name": "Apply Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"code\": \"DISCOUNT10\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cart/:shop_id/cart/apply-coupon",
              "host": ["{{base_url}}"],
              "path": ["api", "cart", ":shop_id", "cart", "apply-coupon"]
            },
            "description": "Apply coupon to cart"
          }
        },
        {
          "name": "Remove Coupon",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/cart/:shop_id/cart/remove-coupon",
              "host": ["{{base_url}}"],
              "path": ["api", "cart", ":shop_id", "cart", "remove-coupon"]
            },
            "description": "Remove coupon from cart"
          }
        }
      ]
    },
    {
      "name": "Checkout",
      "item": [
        {
          "name": "Process Checkout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"addresses\": {\n        \"billing\": {\n            \"first_name\": \"John\",\n            \"last_name\": \"Doe\",\n            \"email\": \"john@example.com\",\n            \"phone\": \"+1234567890\",\n            \"address\": \"123 Main St\",\n            \"address2\": \"Apt 4B\",\n            \"city\": \"New York\",\n            \"state\": \"NY\",\n            \"country\": \"United States\",\n            \"postal_code\": \"10001\"\n        },\n        \"shipping\": {\n            \"first_name\": \"John\",\n            \"last_name\": \"Doe\",\n            \"email\": \"john@example.com\",\n            \"phone\": \"+1234567890\",\n            \"address\": \"123 Main St\",\n            \"address2\": \"Apt 4B\",\n            \"city\": \"New York\",\n            \"state\": \"NY\",\n            \"country\": \"United States\",\n            \"postal_code\": \"10001\"\n        }\n    },\n    \"payment_type_id\": \"payment_type_id_here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/checkout/:shop_id/checkout",
              "host": ["{{base_url}}"],
              "path": ["api", "checkout", ":shop_id", "checkout"]
            },
            "description": "Process checkout with addresses and payment"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "admin_token",
      "value": "your_admin_token_here"
    },
    {
      "key": "shop_id",
      "value": "your_shop_id_here"
    }
  ]
} 